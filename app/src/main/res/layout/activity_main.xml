<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hangman.illegaldisease.hangman.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_Main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            app:srcCompat="@drawable/fifthphase" />

        <Button
            android:id="@+id/button_main_start"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView_Main"
            android:layout_marginTop="31dp"
            android:text="Start" />

        <Button
            android:id="@+id/button_main_dictionary"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button_main_start"
            android:layout_alignStart="@+id/button_main_start"
            android:layout_below="@+id/button_main_start"
            android:layout_marginTop="34dp"
            android:text="Dictionary" />

        <Button
            android:id="@+id/button_main_exit"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button_main_dictionary"
            android:layout_alignStart="@+id/button_main_dictionary"
            android:layout_below="@+id/button_main_dictionary"
            android:layout_marginTop="21dp"
            android:text="Exit" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
